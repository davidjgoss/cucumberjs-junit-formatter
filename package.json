{
  "name": "@cucumber/junit-formatter",
  "version": "0.0.0",
  "description": "Formatter for cucumber-js that produces a JUnit-style XML test run report",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -r dist/ && tsc",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "dev": "npm run build && cucumber-js --retry 1 --retry-tag-filter @retry --format ./dist/index.js:test-result.xml",
    "test": "ava"
  },
  "keywords": [],
  "author": "David Goss",
  "license": "MIT",
  "dependencies": {
    "handlebars": "^4.7.7"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.0",
    "@cucumber/gherkin-utils": "^5.1.0",
    "@cucumber/messages": "^16.0.1",
    "@cucumber/query": "^10.1.0",
    "@types/node": "^15.12.5",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "ava": "^3.15.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "stream-to-string": "^1.2.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@cucumber/cucumber": ">=7.0.0"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
